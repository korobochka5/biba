__version__ = (1, 0, 0)


from .. import loader, utils
import asyncio

class korobochka5Mod(loader.Module):
    """"""

    strings = {"name": "ADB"}

    async def biba1cmd(self, message):
        """–ö–∞—Ä—Ç–æ—á–∫–∞ –¥–ª—è –±–æ—è"""
        self.set("biba1", True)
        while self.get("biba1"):
            await message.reply("‚öîÔ∏è –ü–æ–ª—É—á–∏—Ç—å –∫–∞—Ä—Ç—É")
            await asyncio.sleep(14400)
        await message.delete()

    async def biba2cmd(self, message):
        """–ö–∞—Ä—Ç–æ—á–∫–∞ –¥–ª—è —Ö—É–π–Ω–∏"""
        self.set("biba2", True)
        while self.get("biba2"):
            await message.reply("üèµÔ∏è –ü–æ–ª—É—á–∏—Ç—å –∫–∞—Ä—Ç—É")
            await asyncio.sleep(14400)
        await message.delete()

    async def watcher(self, message):
        if not getattr(message, "out", False):
            return

        if message.raw_text.lower() == "–§–∞—Ä–º 1 —Å—Ç–æ–ø":
            self.set("droch", False)
            await utils.answer(message, "<b>–§–∞—Ä–º 1 –æ—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω</b>")
            await message.delete()
        if message.raw_text.lower() == "–§–∞—Ä–º 2 —Å—Ç–æ–ø":
            self.set("dick", False)
            await utils.answer(message, "<b>–§–∞—Ä–º 2 –æ—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω.</b>")
            await message.delete()
        if message.raw_text.lower() in [".biba1", ".biba2"]:
            await message.delete()
